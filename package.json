{
  "name": "Liberama",
  "version": "0.1.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "dev": "nodemon --inspect server",
    "build:client": "webpack --config build/webpack.prod.config.js",
    "build:linux": "npm run build:client && pkg -t latest-linux-x64 -o dist/linux/liberama .",
    "build:win": "npm run build:client && pkg -t latest-win-x64 -o dist/win/liberama .",
    "lint": "eslint --ext=.js,.vue client server"
  },
  "bin": "server/index.js",
  "pkg": {
    "scripts": "server/config/*.js"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.3.2",
    "css-loader": "^1.0.0",
    "eslint": "^5.11.1",
    "eslint-plugin-html": "^1.4.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-vue": "^5.0.0",
    "file-loader": "^3.0.1",
    "pkg": "^4.3.5",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.1.5"
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "express": "^4.16.4",
    "lazy.js": "^0.5.1",
    "sql-template-strings": "^2.2.2",
    "sqlite": "^3.0.0",
    "vue": "^2.5.21"
  }
}
