{
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "extends": [
    "plugin:vue/essential"
  ],
  "plugins": [
    "vue",
    "html",
    "node"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "strict": 0,
    "indent": [0, 4, {
      "SwitchCase": 1
    }],
    "space-before-function-paren": [2, "never"],
    "valid-jsdoc": [2, {
      "requireReturn": false,
      "prefer": {
        "returns": "return"
      }
    }],
    "require-jsdoc": 0,
    "max-len": [1, 200, 4, {
      "ignoreComments": true,
      "ignoreUrls": true
    }],
  }
}