{
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "sourceType": "module"
  },
  "extends": [
    "plugin:vue/recommended"
  ],
  "plugins": [
    "@babel"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "LM_OK": false,
    "LM_INFO": false,
    "LM_WARN": false,
    "LM_ERR": false,
    "LM_FATAL": false,
    "LM_TOTAL": false
  },
  "rules": {
    "vue/html-indent": ["error", 4],
    "vue/max-attributes-per-line": 0,
    "vue/html-self-closing": 0,

    "strict": 0,
    "indent": [0, 4, {
      "SwitchCase": 1
    }],
    "space-before-function-paren": [2, "never"],
    "valid-jsdoc": [2, {
      "requireReturn": false,
      "prefer": {
        "returns": "return"
      }
    }],
    "require-jsdoc": 0,
    "max-len": [1, 200, 4, {
      "ignoreComments": true,
      "ignoreUrls": true
    }],
    "no-console": off
  }
}